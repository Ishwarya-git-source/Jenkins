pipeline {
    agent any

    environment {
        IMAGE_NAME = 'ishwarya2001/jenkins'
        DOCKER_CREDENTIAL_ID = 'dockerhub'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Ishwarya-git-source/Jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat '"C:\\Program Files\\Git\\bin\\bash.exe" -c "docker build -t ${IMAGE_NAME} ."'
                }
            }
        }

        stage('Login to Docker Hub & Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKER_CREDENTIAL_ID}", 
                    usernameVariable: 'DOCKER_USER', 
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    script {
                        // Create a temp file to store the password because Windows can't pipe echo directly into docker
                        writeFile file: 'docker_pass.txt', text: "${DOCKER_PASS}"
                        bat """
                            docker login -u %DOCKER_USER% --password-stdin < docker_pass.txt
                            docker push %IMAGE_NAME%
                        """
                    }
                }
            }
        }
    }
}
